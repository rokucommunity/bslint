{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017",
      "es2019.array",
      "es2020.promise"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
