{
  "name": "@rokucommunity/bslint",
  "version": "0.2.0",
  "description": "BrighterScript linter plugin",
  "main": "dist/index.js",
  "bin": {
    "bslint": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"src/**\"",
    "test": "nyc mocha",
    "test:nocover": "mocha",
    "test:watch": "npm run test -- --watch --watch-files \"src/**/*.ts,test/**/*.brs\"",
    "watch": "tsc --watch",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist/**/*",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "roku",
    "brightscript"
  ],
  "author": "rokucommunity",
  "license": "ISC",
  "homepage": "https://github.com/rokucommunity/bslint",
  "dependencies": {
    "brighterscript": "^0.38.0",
    "jsonc-parser": "^2.3.0",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "mocha": {
    "spec": "src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "fullTrace": true,
    "watchExtensions": [
      "ts"
    ],
    "timeout": "10000"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
